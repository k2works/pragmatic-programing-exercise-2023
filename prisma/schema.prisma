generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int      @id @default(autoincrement())
  name       String
  age        Int
  gender     String
  test_score Int
  birthday   DateTime
}

model Student2 {
  id        Int      @id @default(autoincrement())
  name      String
  from_id   Int
  class_id  Int?
}

model From {
  id         Int      @id @default(autoincrement())
  syussin    String
}

model ClassRoom {
  id        Int      @id @default(autoincrement())
  teacher   String

  @@map("Class")
}